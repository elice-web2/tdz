{
  "extends": "@tsconfig/node16/tsconfig.json",
  "include": ["src/**/*", "bin/*"],
  "exclude": ["node_modules", "**/*.spec.ts"],
  "compilerOptions": {
    "rootDir": ".",
    "outDir": "dist",
    "typeRoots": ["node_modules/@types", "src/@types"]
  },
  "ts-node": {
    "files": true
  }
}
